{
  "name": "majin",
  "productName": "Majin",
  "version": "2.0.0",
  "description": "Mobile Browser for the Desktop",
  "author": "Hugo V. Monteiro",
  "license": "GPL-2.0",
  "url": "https://github.com/hvmonteiro/majin",
  "bugs": {
    "url": "https://github.com/hvmonteiro/majin/issues"
  },
  "main": "src/majin.js",
  "scripts": {
    "start": "electron .",
    "clean": "grunt clean --verbose",
    "test": "grunt --verbose",
    "exec-test": "electron src/majin.js --test",
    "build": "npm run dist-linux && npm run dist-windows && npm run dist-mac",
    "devel": "npm run start -- --enable-logging",
    "dist-mac": "./bin/build.sh --projectDir ./src -c electron-builder.yml --mac --x64 --ia32",
    "dist-linux": "./bin/build.sh --projectDir ./src -c electron-builder.yml --linux --x64 --ia32 --armv7l",
    "dist-windows": "./bin/build.sh --projectDir ./src -c electron-builder.yml --win --x64 --ia32",
    "preversion": "npm run test && npm run exec-test",
    "version": "",
    "postversion": "#git push && git push --tags && npm clean",
    "release": "npm version minor && npm run build"
  },
  "homepage": "http://majin.info/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hvmonteiro/majin.git"
  },
  "keywords": [
    "majin",
    "browser",
    "mobile",
    "desktop",
    "systray",
    "tray",
    "ontop"
  ],
  "devDependencies": {
    "dialog": "^0.3.x",
    "electron": "^29.1.6",
    "electron-builder": "^20.10.x",
    "electron-packager": "^17.1.2",
    "electron-updater": "^2.21.x",
    "grunt": "^1.6.1",
    "grunt-cli": "1.2.x",
    "grunt-contrib-clean": "^1.x.x",
    "grunt-contrib-copy": "1.x.x",
    "grunt-contrib-jshint": "^3.2.0",
    "grunt-electron": "^10.0.0",
    "grunt-exec": "3.x.x",
    "grunt-mkdir": "1.x.x",
    "grunt-replace": "^2.0.2",
    "grunt-version": "^1.x.x",
    "grunt-zip": "^1.0.0",
    "load-grunt-tasks": "3.5.x",
    "menu": "0.2.x",
    "rcedit": "^1.x.x",
    "remote": "^0.0.5"
  },
  "engines": {
    "electron": "1.6.4",
    "node": "6.10.x",
    "npm": "4.5.x"
  },
  "os": [
    "darwin",
    "mas",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "ia32"
  ],
  "private": true
}
