{
  "name": "majin",
  "productName": "Majin",
  "version": "2.0.1a",
  "description": "Mobile Browser for the Desktop",
  "author": "Hugo V. Monteiro <hugo@hugovmonteiro.net>",
  "email": "hugo@hugovmonteiro.net",
  "license": "GPL-2.0",
  "private": true,
  "copyright": "© 2019, Hugo V. Monteiro",
  "homepage": "http://apps.hugovmonteiro.net/majin",
  "url": "https://github.com/hvmonteiro/majin",
  "bugs": {
    "url": "https://github.com/hvmonteiro/majin/issues"
  },
  "main": "app/background.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "npm test && webpack --config=build/webpack.app.config.js --env=production && electron-builder -mwl"
  },
  "dependencies": {
    "fs-jetpack": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "chai": "^4.1.0",
    "css-loader": "^1.0.0",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "electron-mocha": "^6.0.4",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^5.2.0",
    "source-map-support": "^0.5.6",
    "spectron": "^3.8.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.4",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  },
  "private": true,
  "build": {
    "appId": "net.hugovmonteiro.app.majin",
    "productName": "Majin",
    "copyright": "Copyright © 2019 Hugo V. Monteiro",
    "asar": true,
    "asarUnpack": true,
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null,
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "./assets/icons/mac/icon.icns",
      "target": [
        "zip"
      ]
    },
    "win": {
      "icon": "./assets/icons/win/icon.ico",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "installerIcon": "./assets/icons/win/icon.ico",
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName}-${version}-setup.${ext}",
      "oneClick": false,
      "runAfterFinish": true
    },
    "linux": {
      "icon": "./assets/icons/png",
      "category": "Network",
      "packageCategory": "Network",
      "target": [
        "deb",
        "rpm",
        "tar.gz",
        "AppImage"
      ],
      "executableName": "majin"
    }
  }
}
